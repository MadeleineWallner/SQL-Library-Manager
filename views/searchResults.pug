extends layout.pug 

block content 
    table
            thead
                tr 
                    th Title 
                    th Author 
                    th Genre 
                    th Year 
            tbody
                each match in matches
                    tr  
                        td 
                            a(href=`/books/${book.id}`)= book.title
                        td= book.author
                        td= book.genre 
                        td= book.year
