extends layout.pug
block content
        h1 Books
        form(action=`/books/search` method="POST")
            input(type="text" placeHolder="Search..." id="searchField" name="search")
            input(type="submit" id="searchBtn" value="Search")
        p
            a.button(href="/books/new") Create New Book
            table
                thead
                    tr 
                        th Title 
                        th Author 
                        th Genre 
                        th Year 
                tbody
                    each book in books  
                        tr  
                            td 
                                a(href=`/books/${book.id}`)= book.title
                            td= book.author
                            td= book.genre 
                            td= book.year 
        include pagination.pug