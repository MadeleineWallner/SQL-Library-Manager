extends layout.pug 

block content 
    h1 Update Book
    form(action=`/books/${bookById.id}`, method='POST')
        p 
            label(for='title') Title
            input#title(name='title' type='text' value=bookById.title)
        p 
            label(for='author') Author 
            input#author(name='author' type='text' value=bookById.author)
        p 
            label(for='genre') Genre 
            input#genre(name='genre' type='text' value=bookById.genre)
        p 
            label(for='year') Year 
            input#year(name='year' type='text' value=bookById.year)
        p
            input(type='submit' value='Update Book')
        p 
            a.button(href='/') Cancel